generator client {
  provider = "prisma-client"
  output   = "../src/libs/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
}

enum BacklogItemStatus {
  BACKLOG
  SPRINT_BACKLOG
  IN_PROGRESS
  REVIEW
  DONE
}

enum BacklogItemPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum SprintStatus {
  PLANNED
  ACTIVE
  COMPLETED
}

model Product {
  id            String        @id @default(uuid())
  name          String
  description   String?
  repositoryUrl String
  status        ProductStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  backlogItems  BacklogItem[]
  sprints       Sprint[]

  @@map("products")
}

model BacklogItem {
  id                String              @id @default(uuid())
  productId         String
  sprintId          String?
  parentBacklogItemId String?
  title             String
  description       String?
  priority          BacklogItemPriority @default(MEDIUM)
  status            BacklogItemStatus   @default(BACKLOG)
  assignedAgentId   String?
  storyPoint        Int?
  artifactPath      String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  product           Product             @relation(fields: [productId], references: [id], onDelete: Cascade)
  sprint            Sprint?             @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  parentBacklogItem BacklogItem?        @relation("BacklogItemHierarchy", fields: [parentBacklogItemId], references: [id], onDelete: SetNull)
  childBacklogItems BacklogItem[]       @relation("BacklogItemHierarchy")
  
  @@index([productId])
  @@index([sprintId])
  @@index([status])
  @@map("backlog_items")
}

model Sprint {
  id          String        @id @default(uuid())
  productId   String
  name        String
  goal        String?
  status      SprintStatus  @default(PLANNED)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  product      Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  backlogItems BacklogItem[]
  
  @@index([productId])
  @@index([status])
  @@map("sprints")
}
